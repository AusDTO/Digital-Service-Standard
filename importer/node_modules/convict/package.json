  "name": "convict",
  "description": "Unruly configuration management for nodejs",
  "version": "1.0.1",
  "homepage": "https://github.com/mozilla/node-convict",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/node-convict.git"
  },
  "main": "lib/convict.js",
  "engines": {
    "node": ">=0.4.7"
  },
  "dependencies": {
    "cjson": "0.3.1",
    "depd": "1.0.1",
    "moment": "2.10.6",
    "optimist": "0.6.1",
    "validator": "3.43.0",
